{
  "devDependencies": {
    "@types/node": "^24.0.7",
    "canvas": "^2.11.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3"
  },
  "name": "pixeleditor",
  "version": "1.0.0",
  "description": "A simple pixel editor web application that allow user to create and edit pixel art using a grid-based interface. Users can draw on the canvas.",
  "main": "index.js",
  "dependencies": {
    "node-ts": "^8.0.6"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsc --watch & tsc-alias --watch",
    "format": "prettier --write .",
    "test": "jest --verbose"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "html"
    ],
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup-jest.js"
    ]
  },
